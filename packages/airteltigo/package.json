    "log4js": "^6.3.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "nodemon": "^2.0.7",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "nodemonConfig": {
